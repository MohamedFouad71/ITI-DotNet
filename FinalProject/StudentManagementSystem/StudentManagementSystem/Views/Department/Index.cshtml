@model List<Department>

<h2 class="text-center my-4">Departments</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-controller="Department" asp-action="DepartmentAdd" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> New Department
    </a>
</div>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Delete</th>
            <th scope="col">Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>
                    <form asp-action="DepartmentDelete" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@department.Id" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Are you sure you want to delete this department?');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>
                </td>
                <td>
                    <a asp-action="Modify" asp-route-id="@department.Id" class="btn btn-warning btn-sm">Modify</a>
                </td>
            </tr>
        }
    </tbody>
</table>
