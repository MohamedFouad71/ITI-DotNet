@using StudentManagementSystem.Views.ViewModels
@model CourseAddViewModel

<form asp-controller="Course" asp-action="CourseAdd" method="post">

    @Html.AntiForgeryToken()


    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Credits" class="control-label"></label>
        <select asp-for="Credits" asp-items="Model.CreditsList" class="form-control">
            <option value="">-- Select Credit Hours --</option>
        </select>
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add</button>
</form>