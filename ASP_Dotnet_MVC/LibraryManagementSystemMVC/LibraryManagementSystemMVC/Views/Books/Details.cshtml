@using LibraryBookManagement.Models
@model Book



<h2>Book Details</h2>



<div class="card p-3">

    <p><strong>Title:</strong> @Model.Title</p>

    <p><strong>Author:</strong> @Model.Author</p>

    <p><strong>Category:</strong> @Model.Category</p>

    <p><strong>Publication Date:</strong> @Model.PublicationDate.ToShortDateString()</p>

    <p><strong>Available:</strong> @(Model.IsAvailable ? "Yes" : "No")</p>

</div>



<a asp-action="Index" class="btn btn-secondary mt-2">Back to List</a>